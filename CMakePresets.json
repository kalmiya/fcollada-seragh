{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "defaults",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "hidden": true,
            "cacheVariables": {
                "BUILD_DOCS": "OFF",
                "BUILD_SHARED_LIBS": "OFF",
                "BUILD_TESTING": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ci-linux",
            "displayName": "Linux",
            "description": "Build on Linux (Ubuntu)",
            "inherits": [
                "defaults"
            ]
        },
        {
            "name": "ci-macos",
            "displayName": "MacOS latest",
            "description": "Build on MacOS",
            "inherits": [
                "defaults"
            ]
        },
        {
            "name": "ci-windows",
            "displayName": "Windows latest",
            "description": "Build on Windows",
            "inherits": [
                "defaults"
            ],
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            },
            "environment": {
                "VCPKG_ROOT": "./vcpkg",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "inherits": [
                "defaults"
            ],
            "cacheVariables": {
                "FCOLLADA_ENABLE_COVERAGE": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux"
        },
        {
            "name": "ci-macos",
            "configurePreset": "ci-macos"
        },
        {
            "name": "ci-windows",
            "configurePreset": "ci-windows"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage"
        },
        {
            "name": "lcov",
            "configurePreset": "coverage",
            "targets": "coverage"
        }
    ],
    "testPresets": [
        {
            "name": "defaults",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux",
            "inherits": [
                "defaults"
            ]
        },
        {
            "name": "ci-macos",
            "configurePreset": "ci-macos",
            "inherits": [
                "defaults"
            ]
        },
        {
            "name": "ci-windows",
            "configurePreset": "ci-windows",
            "inherits": [
                "defaults"
            ]
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "inherits": [
                "defaults"
            ]
        }
    ]
}
